<!--
    PLEASE NOTE:
        there is no use of Defaults and classes here to enable easier backwards compatibility and
        compatibility with other global UI. I hate the verbiosity just as much as the next person
-->
<Panel id="ym-container" visibility="hidden" unit-id="">
    <!-- CRUSADE CARD -->
    <VerticalLayout id="crusadeCard" height="726" width="1000" padding="3" childAlignment="TopLeft" allowDragging="true" returnToOriginalPositionWhenReleased="false" color="#0f0f0f" childForceExpandHeight="false" visibility="hidden" animationDuration="0.1" showAnimation="FadeIn" hideAnimation="FadeOut">
        <Panel preferredHeight="30" childForceExpandWidth="false" color="#0f0f0f">
            <Panel rectAlignment="UpperRight" height="30" width="30" color="#00000000">
                <Button transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" height="30" width="30" color="Red" textColor="#ffffff" id="crusadeCardCloseButton">X</Button>
            </Panel>
        </Panel>

        <VerticalLayout childForceExpandHeight="false" childAlignment="TopLeft" spacing="25" color="#00000000">
            <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" color="#00000000">
                <!-- Left details table -->
                <TableLayout childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" preferredWidth="650" columnWidths="200 0" cellPadding="0" color="#00000000">
                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                            <Text preferredWidth="10" color="#00000000"></Text>
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">UNIT NAME:</Text>
                        </Cell>
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccUnitName" placeholder="Personalized Name" color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>

                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                            <Text preferredWidth="10" color="#00000000"></Text>
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">BATTLEFIELD ROLE:</Text>
                        </Cell>
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccBattlefieldRole" placeholder="HQ, Troops, etc." color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>

                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                            <Text preferredWidth="10" color="#00000000"></Text>
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">CRUSADE FACTION:</Text>
                        </Cell>
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccCrusadeFaction" placeholder="Imperium, Chaos, etc." color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>

                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                            <Text preferredWidth="10" color="#00000000"></Text>
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">SELECTABLE KEYWORDS:</Text>
                        </Cell>
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccSelectableKeywords" placeholder="&#60;Chapter&#62;, &#60;Dynasty&#62;, etc." color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>
                </TableLayout>

                <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" flexibleWidth="1" color="#00000000" /> <!-- spacer -->

                <!-- Right mini counters -->
                <TableLayout childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" preferredWidth="325" cellPadding="0" color="#00000000">
                    <Row dontUseTableRowBackground="true" preferredHeight="74" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter">
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">POWER&#xD;&#xA;LEVEL</Text>
                        </Cell>
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter">
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">EXPERIENCE&#xD;&#xA;POINTS</Text>
                        </Cell>
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter">
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">CRUSADE&#xD;&#xA;POINTS</Text>
                        </Cell>
                    </Row>

                    <Row preferredHeight="74" dontUseTableRowBackground="true" color="#141414">
                        <Cell>
                            <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" spacing="4" childAlignment="MiddleCenter" color="#00000000">
                                <Button id="plDown" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="-" color="#1d1d1d" textColor="#ffffff" />
                                <Text id="pl" fontStyle="Bold" color="#ffffff" fontSize="20" textColor="#ffffff">0</Text>
                                <Button id="plUp" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="+" color="#1d1d1d" textColor="#ffffff" />
                            </HorizontalLayout>
                        </Cell>
                        <Cell>
                            <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" spacing="4" childAlignment="MiddleCenter" color="#00000000">
                                <Button id="xpDown" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="-" color="#1d1d1d" textColor="#ffffff" />
                                <Text id="xp" fontStyle="Bold" color="#ffffff" fontSize="20">0</Text>
                                <Button id="xpUp" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="+" color="#1d1d1d" textColor="#ffffff" />
                            </HorizontalLayout>
                        </Cell>
                        <Cell>
                            <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" spacing="4" childAlignment="MiddleCenter" color="#00000000">
                                <Button id="clDown" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="-" color="#1d1d1d" textColor="#ffffff" />
                                <Text id="cl" fontStyle="Bold" color="#ffffff" fontSize="20">0</Text>
                                <Button id="clUp" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="+" color="#1d1d1d" textColor="#ffffff" />
                            </HorizontalLayout>
                        </Cell>
                    </Row>
                </TableLayout>
            </HorizontalLayout>

            <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" color="#00000000">
                <!-- Unit meta -->
                <TableLayout childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" flexibleWidth="1" columnWidths="200 0" cellPadding="0" color="#00000000">
                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                            <Text preferredWidth="10" color="#00000000"></Text>
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">UNIT TYPE:</Text>
                        </Cell>
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccUnitType" placeholder="Datasheet" color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>

                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                            <Text preferredWidth="10" color="#00000000"></Text>
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">EQUIPMENT:</Text>
                        </Cell>
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccEquipment" placeholder="Wargear" color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>

                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                            <Text preferredWidth="10" color="#00000000"></Text>
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">PSYCHIC POWERS:</Text>
                        </Cell>
                        <!-- space hack retained -->
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccPsychicPowers" placeholder="None&#160;" color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>

                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                            <Text preferredWidth="10" color="#00000000"></Text>
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">WARLORD TRAIT:</Text>
                        </Cell>
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccWarlordTrait" placeholder="None&#160;" color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>

                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                            <Text preferredWidth="10" color="#00000000"></Text>
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">RELIC:</Text>
                        </Cell>
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccRelic" placeholder="None&#160;" color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>
                </TableLayout>

                <!-- Other upgrades -->
                <TableLayout childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" preferredWidth="375" cellPadding="0" color="#00000000">
                    <Row dontUseTableRowBackground="true" preferredHeight="37" color="#00000000">
                        <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter">
                            <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">OTHER UPGRADES AND SELECTABLE ABILITIES</Text>
                        </Cell>
                    </Row>
                    <Row dontUseTableRowBackground="true" preferredHeight="148" color="#00000000">
                        <Cell>
                            <InputField fontSize="20" onEndEdit="" id="ccOtherUpgrades" placeholder="Litanies, Exarch Powers, etc." lineType="MultiLineNewLine" color="#141414" textColor="#ffffff" />
                        </Cell>
                    </Row>
                </TableLayout>
            </HorizontalLayout>

            <!-- Combat tallies -->
            <TableLayout cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" color="#00000000">
                <Row dontUseTableRowBackground="true" preferredHeight="35" color="#00000000">
                    <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter" columnSpan="3">
                        <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">COMBAT TALLIES</Text>
                    </Cell>
                </Row>

                <Row dontUseTableRowBackground="true" preferredHeight="35" color="#00000000">
                    <Cell>
                        <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" spacing="20" color="#00000000">
                            <Text fontStyle="Bold" color="#ffffff" fontSize="16">TOTAL UNITS KILLED:</Text>
                            <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" flexibleWidth="1" spacing="10" color="#00000000">
                                <Button id="totalKillsDown" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="-" color="#1d1d1d" textColor="#ffffff" />
                                <Text id="totalKills" fontStyle="Bold" color="#ffffff" fontSize="16">0</Text>
                                <Button id="totalKillsUp" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="+" color="#1d1d1d" textColor="#ffffff" />
                            </HorizontalLayout>
                        </HorizontalLayout>
                    </Cell>

                    <Cell>
                        <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" spacing="20" color="#00000000">
                            <Text fontStyle="Bold" color="#ffffff" fontSize="16">BATTLES PLAYED:</Text>
                            <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" flexibleWidth="1" spacing="10" color="#00000000">
                                <Button id="playedDown" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="-" color="#1d1d1d" textColor="#ffffff" />
                                <Text id="played" fontStyle="Bold" color="#ffffff" fontSize="16">0</Text>
                                <Button id="playedUp" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="+" color="#1d1d1d" textColor="#ffffff" />
                            </HorizontalLayout>
                        </HorizontalLayout>
                    </Cell>

                    <Cell>
                        <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" spacing="20" color="#00000000">
                            <Text fontStyle="Bold" color="#ffffff" fontSize="16">BATTLES SURVIVED:</Text>
                            <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" flexibleWidth="1" spacing="10" color="#00000000">
                                <Button id="survivedDown" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="-" color="#1d1d1d" textColor="#ffffff" />
                                <Text id="survived" fontStyle="Bold" color="#ffffff" fontSize="16">0</Text>
                                <Button id="survivedUp" transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" text="+" color="#1d1d1d" textColor="#ffffff" />
                            </HorizontalLayout>
                        </HorizontalLayout>
                    </Cell>
                </Row>
            </TableLayout>

            <!-- Rank -->
            <TableLayout childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="0 35 0 35 0 35 0 35" cellPadding="0" color="#00000000">
                <Row dontUseTableRowBackground="true" preferredHeight="35" color="#00000000">
                    <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter" columnSpan="8">
                        <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">RANK</Text>
                    </Cell>
                </Row>
                <Row dontUseTableRowBackground="true" preferredHeight="35" color="#00000000">
                    <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter"><Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">BLOODED</Text></Cell>
                    <Cell><ToggleButton colors="#333333|#555555|#777777|#999999" id="ccBlooded" /></Cell>
                    <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter"><Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">BATTLE-HARDENED</Text></Cell>
                    <Cell><ToggleButton colors="#333333|#555555|#777777|#999999" id="ccBattleHardened" /></Cell>
                    <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter"><Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">HEROIC</Text></Cell>
                    <Cell><ToggleButton colors="#333333|#555555|#777777|#999999" id="ccHeroic" /></Cell>
                    <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleCenter"><Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleCenter" fontStyle="Bold">LEGENDARY</Text></Cell>
                    <Cell><ToggleButton colors="#333333|#555555|#777777|#999999" id="ccLegendary" /></Cell>
                </Row>

                <Row dontUseTableRowBackground="true" preferredHeight="70" color="#00000000">
                    <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                        <Text preferredWidth="10" color="#00000000"></Text>
                        <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">BATTLE HONORS:</Text>
                    </Cell>
                    <Cell columnSpan="7">
                        <InputField fontSize="20" onEndEdit="" id="ccBattleHonors" placeholder="None&#160;" lineType="MultiLineNewLine" color="#141414" textColor="#ffffff" />
                    </Cell>
                </Row>

                <Row dontUseTableRowBackground="true" preferredHeight="70" color="#00000000">
                    <Cell color="#00000000" dontUseTableCellBackground="true" alignment="MiddleLeft" childForceExpandWidth="false">
                        <Text preferredWidth="10" color="#00000000"></Text>
                        <Text fontSize="16" textColor="#ffffff" color="#ffffff" alignment="MiddleLeft" fontStyle="Bold" flexibleWidth="1">BATTLE SCARS:</Text>
                    </Cell>
                    <Cell columnSpan="7">
                        <InputField fontSize="20" onEndEdit="" id="ccBattleScars" placeholder="None&#160;" lineType="MultiLineNewLine" color="#141414" textColor="#ffffff" />
                    </Cell>
                </Row>
            </TableLayout>
        </VerticalLayout>
    </VerticalLayout>

    <!-- DATA CARD -->
    <VerticalLayout childForceExpandHeight="false" childAlignment="TopLeft" id="dataCard" height="390" width="700" color="#0f0f0f" allowDragging="true" returnToOriginalPositionWhenReleased="false">
        <Panel preferredHeight="40" childForceExpandWidth="false" color="#0f0f0f">
            <Text id="data-unitName" fontStyle="Bold" fontSize="26" color="#ffffff" alignment="MiddleCenter" />
            <Panel rectAlignment="UpperRight" height="30" width="30" color="#00000000">
                <Button transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" height="30" width="30" color="Red" textColor="#ffffff" id="dataCardCloseButton">X</Button>
            </Panel>
        </Panel>

        <VerticalLayout color="#0f0f0f">
            <VerticalScrollView flexibleHeight="1" childForceExpandHeight="false" scrollSensitivity="40">
                <VerticalLayout height="1000" padding="10" horizontalOverflow="Wrap" spacing="30" id="dataCardContentContainer" color="#0f0f0f">
                    <!-- Keywords -->
                    <VerticalLayout id="keywordContainer" preferredHeight="70" color="#00000000">
                        <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" spacing="2" preferredHeight="35" color="#00000000">
                            <Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleLeft" preferredWidth="93">Faction: </Text>
                            <Text resizeTextForBestFit="true" resizeTextMinSize="6" resizeTextMaxSize="20" preferredHeight="20" fontStyle="Bold" id="factionKeywords" alignment="MiddleLeft" horizontalOverflow="Wrap" preferredWidth="400" color="#ffffff" />
                        </HorizontalLayout>
                        <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" id="keywordList" spacing="3" preferredHeight="35" color="#00000000">
                            <Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleLeft" preferredWidth="93">Keywords:  </Text>
                            <Text resizeTextForBestFit="true" resizeTextMinSize="6" resizeTextMaxSize="20" preferredHeight="20" fontStyle="Bold" id="keywords" horizontalOverflow="Wrap" flexibleHeight="1" alignment="MiddleLeft" preferredWidth="400" color="#ffffff" />
                        </HorizontalLayout>
                    </VerticalLayout>

                    <!-- Powers Known -->
                    <VerticalLayout id="powersKnownContainer" active="false" color="#00000000">
                        <TableLayout cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="200 70 70 0" color="#00000000">
                            <Row color="#1a1a1a" preferredHeight="40" dontUseTableRowBackground="true">
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Name</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">WC</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Range</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Description</Text></Cell>
                            </Row>
                        </TableLayout>
                        <TableLayout id="powersKnown" cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="200 70 70 0" color="#00000000" />
                    </VerticalLayout>

                    <!-- Psyker Profiles -->
                    <VerticalLayout childForceExpandHeight="false" childAlignment="TopLeft" id="psykerProfilesContainer" active="false" color="#00000000">
                        <TableLayout cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="200 70 70 0" color="#00000000">
                            <Row color="#1a1a1a" preferredHeight="40" dontUseTableRowBackground="true">
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Name</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Cast</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Deny</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Can Know</Text></Cell>
                            </Row>
                        </TableLayout>
                        <TableLayout id="psykerProfiles" cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="200 70 70 0" color="#00000000" />
                    </VerticalLayout>

                    <!-- Models 9e -->
                    <VerticalLayout id="modelsTable9e" active="false" color="#00000000">
                        <TableLayout cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="200 0 0 0 0 0 0 0 0 0" color="#00000000">
                            <Row color="#1a1a1a" preferredHeight="40" dontUseTableRowBackground="true">
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Name</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">M</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">WS</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">BS</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">S</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">T</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">W</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">A</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Ld</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Sv</Text></Cell>
                            </Row>
                        </TableLayout>
                        <TableLayout id="models9e" cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="200 0 0 0 0 0 0 0 0 0" color="#00000000" />
                    </VerticalLayout>

                    <!-- Models 10e -->
                    <VerticalLayout id="modelsTable10e" active="false" color="#00000000">
                        <TableLayout cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="200 0 0 0 0 0 0" color="#00000000">
                            <Row color="#1a1a1a" preferredHeight="40" dontUseTableRowBackground="true">
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Name</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">M</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">T</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Sv</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">W</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">LD</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">OC</Text></Cell>
                            </Row>
                        </TableLayout>
                        <TableLayout id="models10e" cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="200 0 0 0 0 0 0" color="#00000000" />
                    </VerticalLayout>

                    <!-- Weapons 9e -->
                    <VerticalLayout id="weaponsTable9e" childForceExpandHeight="false" childAlignment="TopLeft" active="false" color="#00000000">
                        <TableLayout cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="225 70 120 80 80 80 0" color="#00000000">
                            <Row color="#1a1a1a" preferredHeight="40" dontUseTableRowBackground="true">
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Name</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Range</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Type</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">S</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">AP</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">D</Text></Cell>
                                <Cell><Text fontStyle="Bold" fontSize="18" color="#ffffff" alignment="MiddleCenter">Abilities</Text></Cell>
                            </Row>
                        </TableLayout>
                        <TableLayout id="weapons9e" cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="225 70 120 80 80 80 0" color="#00000000" />
                    </VerticalLayout>

                    <!-- Weapons 10e -->
                    <VerticalLayout id="weaponsTable10e" childForceExpandHeight="false" childAlignment="TopLeft" active="false" color="#00000000">
                        <TableLayout cellPadding="5" childForceExpandHeight="false" autoCalculateHeight="true" horizontalOverflow="Wrap" columnWidths="225 70 70 70 70 70 70 0" color="#00000000">
